<Window x:Class="SportFogadas.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportFogadas"
        mc:Ignorable="d"
        Title="Admin Ablak" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Felhasználónév:</Label>
            <TextBox x:Name="txtUsername"/>
            <Label>Jelszó:</Label>
            <PasswordBox x:Name="pwdPassword"/>
            <Label>Email:</Label>
            <TextBox x:Name="txtEmail"/>
            <Button Content="Felhasználó hozzáadása" Click="AddUser_Click"/>
            <Button Content="Felhasználó változtatása" Click="EditUser_Click"/>
        </StackPanel>
    </Grid>
</Window>