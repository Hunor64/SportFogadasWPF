<Window x:Class="SportFogadas.BalanceManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportFogadas"
        mc:Ignorable="d"
        Title="BalanceManager" Height="450" Width="300">
    <Grid>
        <StackPanel Visibility="Visible" x:Name="stpLoadBalance">
            <Label x:Name="lblDepositBalance">Egyenleg:</Label>
            <Label>Feltöltendő összeg:</Label>
            <TextBox x:Name="txtDeposit"></TextBox>
            <Button x:Name="btnDeposit" Click="btnDeposit_Click">Feltöltés</Button>
            <Button x:Name="btnDepositSwitch" Click="btnDepositSwitch_Click">Kivétel</Button>

        </StackPanel>
        <StackPanel Visibility="Collapsed" x:Name="stpDeLoadBalance">
            <Label x:Name="lblWithdrawlBalance">Egyenleg:</Label>
            <Label>Kifizetés összeg:</Label>
            <TextBox x:Name="txtWithdrawl"></TextBox>
            <Label>Bank számla szám:</Label>
            <TextBox x:Name="txtBankNumber"></TextBox>
            <Button x:Name="btnWithdraw" Click="btnWithdraw_Click">Utalás</Button>
            <Button x:Name="btnWithdrawSwitch" Click="btnWithdrawSwitch_Click">Feltöltés</Button>
        </StackPanel>
    </Grid>
</Window>
