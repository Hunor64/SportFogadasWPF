<Window x:Class="SportFogadas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportFogadas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <StackPanel x:Name="stpHeader">
                <Label x:Name="lblUsername"></Label>
                <Label x:Name="lblBalance"></Label>
                <Button Click="Button_Click">
                    Login
                </Button>
                <Button Click="Button_Click_1">
                    Organiser Panel
                </Button>
                <Button Click="Button_Click_2">
                    Feltöltés
                </Button>
                <Button Click="Button_Click_3">
                    Fogadás
                </Button>
            </StackPanel>
            <StackPanel x:Name="stpOngoingBets">

            </StackPanel>
            <Grid x:Name="grdCurrentEvents">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="stpEvents">

                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
