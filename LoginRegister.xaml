<Window x:Class="SportFogadas.LoginRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportFogadas"
        mc:Ignorable="d"
        Title="LoginRegister" Height="450" Width="300">
    <Grid>
        <StackPanel x:Name="stpLogin">
            <TextBox x:Name="txbLoginUsername"></TextBox>
            <PasswordBox x:Name="pswLoginPassword"></PasswordBox>
            <Button x:Name="btnLogin" Click="btnLogin_Click">Login</Button>
        </StackPanel>
        <StackPanel x:Name="stpRegister" Visibility="Collapsed">
            <TextBox x:Name="txbRegisterUsername"></TextBox>
            <TextBox x:Name="txbRegisterEmail"></TextBox>
            <PasswordBox x:Name="pswRegisterPassword"></PasswordBox>
            <Button x:Name="btnRegister" Click="btnRegister_Click">Login</Button>
        </StackPanel>
    </Grid>
</Window>
