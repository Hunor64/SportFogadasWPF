<Window x:Class="SportFogadas.OrganiserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportFogadas"
        mc:Ignorable="d"
        Title="Rendező Ablak" Height="450" Width="310" Background="#d9d9d9" BorderBrush="#515151" BorderThickness="1">
    <Grid>
        <StackPanel>
            <Label Style="{StaticResource LabelStyle}">Esemény neve:</Label>
            <TextBox x:Name="txbEventName" Style="{StaticResource TextBoxStyle}"></TextBox>
            <DatePicker x:Name="dtpEventDate" Style="{DynamicResource DatePickerStyle}"></DatePicker>
            <Label Style="{StaticResource LabelStyle}">Kategória</Label>
            <TextBox x:Name="txbCategory"  Style="{StaticResource TextBoxStyle}"></TextBox>
            <Label Style="{StaticResource LabelStyle}">Helyszín</Label>
            <TextBox x:Name="txbLocation"  Style="{StaticResource TextBoxStyle}"></TextBox>
            <Button Click="Button_Click" Style="{StaticResource ButtonStyle}">Hozzáadás</Button>
        </StackPanel>
    </Grid>
</Window>
