<Window x:Class="SportFogadas.OrganiserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportFogadas"
        mc:Ignorable="d"
        Title="Rendező Ablak" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Esemény neve:</Label>
            <TextBox x:Name="txbEventName"></TextBox>
            <DatePicker x:Name="dtpEventDate"></DatePicker>
            <Label>Kategória</Label>
            <TextBox x:Name="txbCategory"></TextBox>
            <Label>Helyszín</Label>
            <TextBox x:Name="txbLocation"></TextBox>
            <Button Click="Button_Click">Hozzáadás</Button>
        </StackPanel>
    </Grid>
</Window>
